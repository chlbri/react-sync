{
  "name": "@bemedev/react-sync",
  "version": "0.0.3",
  "description": "Sync better in react",
  "author": {
    "email": "bri_lvi@icloud.com",
    "name": "chlbri",
    "url": "https://bemedev.vercel.app"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chlbri/react-sync.git"
  },
  "license": "MIT",
  "type": "module",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "module": "lib/index.js",
  "exports": {
    ".": {
      "default": "./lib/index.js",
      "import": "./lib/index.js",
      "require": "./lib/index.cjs",
      "types": "./lib/index.d.ts"
    }
  },
  "maintainers": [
    {
      "email": "bri_lvi@icloud.com",
      "name": "chlbri",
      "url": "https://bemedev.vercel.app"
    }
  ],
  "contributors": [
    {
      "email": "bri_lvi@icloud.com",
      "name": "chlbri",
      "url": "https://bemedev.vercel.app"
    }
  ],
  "keywords": [
    "state",
    "library",
    "react",
    "hook",
    "store"
  ],
  "files": [
    "lib",
    "public"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "config": "pnpm install",
    "config:off": "pnpm run config --offline",
    "ci": "pnpm run config:off && pnpm run lint && pnpm run test && pnpm run build",
    "ci:admin": "pnpm run rm && pnpm run config:off && pnpm run lint && pnpm run build && pnpm run test",
    "rollup": "rollup -c",
    "tsup": "tsup",
    "build": "pnpm rm:lib && pnpm run rollup",
    "rm": "rm -rf node_modules pnpm-lock.yaml",
    "rinit": "pnpm run rm && pnpm run config",
    "rinit:off": "pnpm run rm && pnpm run config:off",
    "test": "pnpm run test:coverage --no-coverage",
    "test:coverage": "vitest run --passWithNoTests",
    "test:watch": "vitest --passWithNoTests",
    "rm:lib": "rm -rf lib",
    "clean": "pnpm run remove && pnpm run config",
    "prettier": "prettier --write \"src/**/*.{ts,tsx}\"",
    "eslint": "eslint \"{src/**/*,App}.{ts,tsx}\"",
    "lint": "pnpm run prettier && pnpm run eslint --fix",
    "lint-watch": "onchange --await-write-finish 5500 \"**/*\" -- pnpm run lint",
    "prepublishOnly": "",
    "prepare": "husky"
  },
  "devDependencies": {
    "@bemedev/fsf": "^0.7.0",
    "@bemedev/vitest-alias": "^0.0.3",
    "@bemedev/vitest-cov-exclude": "^0.0.1",
    "@bemedev/vitest-extended": "^0.3.5",
    "@bemedev/x-matches": "^0.0.3",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/node": "^20.12.8",
    "@types/react": "^18.3.2",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "@vitest/coverage-v8": "^1.5.2",
    "@xstate/immer": "^0.3.3",
    "eslint": "^8.57.0",
    "glob": "^10.3.15",
    "husky": "^9.0.11",
    "onchange": "^7.1.0",
    "prettier": "^3.2.5",
    "pretty-quick": "^4.0.0",
    "react": "^18.3.1",
    "react-test-renderer": "^18.3.1",
    "rollup": "^4.14.1",
    "rollup-plugin-tsc-alias": "^1.1.2",
    "rollup-plugin-typescript2": "^0.36.0",
    "tslib": "^2.6.2",
    "tsup": "^8.0.2",
    "typescript": "^5.4.4",
    "vitest": "^1.5.2",
    "xstate": "4.38.3"
  },
  "peerDependencies": {
    "@types/react": "^18.3.2",
    "react": "^18.3.1"
  }
}
